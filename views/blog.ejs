<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/blog.css" />
    <title>Reverr | Blogs</title>
  </head>
  <body>
    <%-include("header")-%>

    <section id="blog-intro">
      <div class="blog-heading">
        <img src="images/chain 1.png" alt="" />
        <h1>REVERR BLOGS</h1>
      </div>
      <p>
        Get the best and latest insights of the concepts from the
        entrepreneurial world.
      </p>
    </section>

    <section id="recent-post">
      <h1>Recent Posts</h1>
      <div class="sample-blog">
        <div class="blog-slider">
          <img src="/images/caret1.png" alt="" class="left-caret" />
          <img
            src="<%= sectionOneFirstRow[0].image %>"
            alt="blog-img"
            class="sample-blog-img"
          />
          <img src="/images/caret2.png" alt="" class="right-caret" />
        </div>
        <div class="blog-content">
          <h1>
            <a href="/blog/<%= sectionOneFirstRow[0].id %>"
              ><%= sectionOneFirstRow[0].heading %></a
            >
          </h1>
          <p><%= sectionOneFirstRow[0].body %></p>
        </div>
      </div>
      <div class="blog-section-btns">
        <a><button id="sectionOneBtn">Section 01</button></a>
        <a><button id="sectionTwoBtn">Section 02</button></a>
        <a><button id="sectionThreeBtn">Section 03</button></a>
      </div>
      <section id="sectionOne">
        <div class="blog-container">
          <% for (item of sectionOneFirstRow) { %>
          <div class="blog">
            <a href="/blog/<%= item.id %>"
              ><img src="<%=item.image %>" alt=""
            /></a>
            <h1><a href="/blog/<%= item.id %>"><%= item.heading %></a></h1>
            <p class="blog-text"><%= item.body %> ...</p>
          </div>
          <% } %>
        </div>
        <div class="blog-container">
          <% for (item of sectionOneSecondRow) { %>
          <div class="blog">
            <a href="/blog/<%= item.id %>"
              ><img src="<%=item.image %>" alt=""
            /></a>
            <h1><a href="/blog/<%= item.id %>"><%= item.heading %></a></h1>
            <p class="blog-text"><%= item.body %> ...</p>
          </div>
          <% } %>
        </div>
      </section>
      <section id="sectionTwo">
        <div class="blog-container">
          <% for (item of sectionTwoFirstRow) { %>
          <div class="blog">
            <a href="/blog/<%= item.id %>"
              ><img src="<%=item.image %>" alt=""
            /></a>
            <h1><a href="/blog/<%= item.id %>"><%= item.heading %></a></h1>
            <p class="blog-text"><%= item.body %> ...</p>
          </div>
          <% } %>
        </div>
        <div class="blog-container">
          <% for (item of sectionTwoSecondRow) { %>
          <div class="blog">
            <a href="/blog/<%= item.id %>"
              ><img src="<%=item.image %>" alt=""
            /></a>
            <h1><a href="/blog/<%= item.id %>"><%= item.heading %></a></h1>
            <p class="blog-text"><%= item.body %> ...</p>
          </div>
          <% } %>
        </div>
      </section>
      <section id="sectionThree"></section>
    </section>
    <%-include("footer")-%>
  </body>
  <script>
    const sectionOneBtn = document.querySelector("#sectionOneBtn");
    const sectionTwoBtn = document.querySelector("#sectionTwoBtn");
    const sectionThreeBtn = document.querySelector("#sectionThreeBtn");

    sectionOneBtn.style.opacity = "1";
    sectionTwoBtn.style.opacity = "0.3";
    sectionThreeBtn.style.opacity = "0.3";

    const sectionOne = document.querySelector("#sectionOne");
    const sectionTwo = document.querySelector("#sectionTwo");
    const sectionThree = document.querySelector("#sectionThree");

    sectionOne.style.display = "block";
    sectionTwo.style.display = "none";
    sectionThree.style.display = "none";

    const handleS1 = () => {
      sectionOne.style.display = "block";
      sectionTwo.style.display = "none";
      sectionThree.style.display = "none";
      sectionOneBtn.style.opacity = "1";
      sectionTwoBtn.style.opacity = "0.3";
      sectionThreeBtn.style.opacity = "0.3";
    };
    const handleS2 = () => {
      sectionOne.style.display = "none";
      sectionTwo.style.display = "block";
      sectionThree.style.display = "none";
      sectionOneBtn.style.opacity = "0.3";
      sectionTwoBtn.style.opacity = "1";
      sectionThreeBtn.style.opacity = "0.3";
    };
    const handleS3 = () => {
      sectionOne.style.display = "none";
      sectionTwo.style.display = "none";
      sectionThree.style.display = "block";
      sectionOneBtn.style.opacity = "0.3";
      sectionTwoBtn.style.opacity = "0.3";
      sectionThreeBtn.style.opacity = "1";
    };

    sectionOneBtn.addEventListener("click", handleS1);
    sectionTwoBtn.addEventListener("click", handleS2);
    sectionThreeBtn.addEventListener("click", handleS3);
  </script>
</html>
