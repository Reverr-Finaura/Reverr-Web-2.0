              <div class="dwnld_info">
                <p class="getiton">Download it on the</p>
                <p class="link">App Store</p>
              </div>
            </button>
          </div>
        </div>
        <div class="app_imgs">
          <img src="/images/download_app.png" alt="" />
        </div>
      </section>
